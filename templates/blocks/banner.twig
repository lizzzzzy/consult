    <h1 class="banner__heading">{{ heading }}</h1>
    <p class="banner__desc">{{ text }}</p>
    <div class="banner__contacts">
      <p class="banner__phone">{{ phone }}</p>
      <p class="banner__mail">{{ mail }}</p>
      <p class="banner__adress">{{ adress }}</p>
    </div>
  </div>
</section>
